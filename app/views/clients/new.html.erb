<h1>Add New Clients</h1>
<%= form_for @client do |form| %>
  <div>
    <%=form.label :name %>
    <%=form.text_field :name, autofocus:true %>
  </div>
  <div>
    <%=form.label :email %>
    <%=form.email_field :email %>
  </div>
  <div>
    <%=form.label :age %>
    <%=form.text_field :age %>
  </div>
  <div>
    <%=form.label :address %>
    <%=form.text_field :address %>
  </div>
  <div>
    <%=form.label :contact_no %>
    <%=form.text_field :contact_no %>
  </div>
  <%=form.submit %>
<% end %>