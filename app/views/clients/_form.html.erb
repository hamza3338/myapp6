<%= form_for @client do |form| %>

  <% if @client.errors.any? %>
    <h2>Errors</h2>
    <ul>
      <% @client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%=form.label :name %>
    <%=form.text_field :name, autofocus:true %>
  </div>

  <div>
    <%=form.label :email %>
    <%=form.email_field :email %>
  </div>

  <div>
    <%=form.label :age %>
    <%=form.text_field :age %>
  </div>

  <div>
    <%=form.label :address %>
    <%=form.text_field :address %>
  </div>

  <div>
    <%=form.label :contact_no %>
    <%=form.text_field :contact_no %>
  </div>

  <div>
    <%= form.label :image %>
    <%= form.file_field :image%>
  </div>

  <%= image_tag @client.image %>

  <%=form.submit %>

<% end %>